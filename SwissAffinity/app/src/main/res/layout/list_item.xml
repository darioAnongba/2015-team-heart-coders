<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/rowEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Event Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:layout_alignParentLeft="false"
        />

    <TextView
        android:id="@+id/rowEventDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Details"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingLeft="5dp"
        android:layout_below="@+id/rowEventName"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/rowEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/rowEventDateBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date begin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingLeft="5dp"
        android:layout_below="@+id/rowEventDetails"
        android:layout_alignParentStart="true"/>
</RelativeLayout>