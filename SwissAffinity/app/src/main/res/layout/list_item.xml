<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <TextView
        android:id="@+id/rowEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="@string/event_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/rowEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rowEventDateBegin"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="@string/event_location"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/rowEventDateBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rowEventName"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="@string/event_date_begin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"/>

</RelativeLayout>