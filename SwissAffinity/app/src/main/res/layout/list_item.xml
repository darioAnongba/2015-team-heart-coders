<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_menu_report_image"
        android:contentDescription="event logo" />

    <TextView
        android:id="@+id/rowEventName"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:text="Event Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/rowEventDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rowEventName"
        android:layout_below="@+id/rowEventName"
        android:text="Event Details"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/rowEventName" />
</RelativeLayout>