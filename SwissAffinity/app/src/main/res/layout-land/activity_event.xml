<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.swissaffinity.EventActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Name"
        android:id="@+id/eventNameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventPicture"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/eventNameTextView"
        android:layout_below="@+id/eventNameTextView"
        android:contentDescription="picture of the event"
        android:contextClickable="false"
        android:src="@drawable/couple" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/eventDate"
        android:layout_above="@+id/eventPicture"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/eventTime"
        android:layout_marginStart="32dp"
        android:layout_above="@+id/eventPicture"
        android:layout_toEndOf="@+id/eventDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/eventLocation"
        android:layout_below="@+id/eventDate"
        android:layout_alignStart="@+id/eventDate" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapEvent"
        android:layout_below="@+id/eventLocation"
        android:layout_alignStart="@+id/eventLocation"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@+id/eventTime"
        android:src="@drawable/swiss" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age Range"
        android:id="@+id/eventAgeRange"
        android:layout_below="@+id/eventLocation"
        android:layout_alignParentStart="true" />

</RelativeLayout>
